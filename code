public class DynamicXPathExample {
    public static void main(String[] args) {
        // Set the path to the WebDriver executable
        System.setProperty("webdriver.chrome.driver", "path/to/chromedriver");

        // Initialize WebDriver
        WebDriver driver = new ChromeDriver();

        // Open the desired webpage
        driver.get("URL_of_the_webpage");
        
        // Example header names to check
        String[] headerNames = {"Header1", "Header2", "Header3"};
        
        // Iterate through header names and check their presence
        for (String headerName : headerNames) {
            // Construct the dynamic XPath
            String xpath = String.format("//th[contains(text(), '%s')]", headerName);
            
            // Find the header element
            List<WebElement> headerElements = driver.findElements(By.xpath(xpath));
            
            // Check if the header element is found
            if (headerElements.size() > 0) {
                System.out.println("Header '" + headerName + "' is present.");
            } else {
                System.out.println("Header '" + headerName + "' is NOT present.");
            }
        }
        
        // Close the browser
        driver.quit();
    }
}
